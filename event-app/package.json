{
  "name": "event-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --webpack",
    "build:static": "STATIC_EXPORT=true next build --webpack",
    "cap:init": "pnpm build:static && cap add ios && cap add android && pnpm cap:assets",
    "cap:sync": "pnpm build:static && cap sync",
    "cap:assets": "capacitor-assets generate",
    "cap:ios": "pnpm build:static && cap sync ios && cap open ios",
    "cap:android": "pnpm build:static && cap sync android && cap open android",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@serwist/next": "^9.5.0",
    "dexie": "^4.2.1",
    "lib": "workspace:*",
    "next": "16.0.7",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^1.7.0",
    "swr": "^2.3.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "serwist": "^9.5.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}